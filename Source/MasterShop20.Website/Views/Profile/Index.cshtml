@using System.Collections.Concurrent
@using System.Web.Mvc.Html
@model MasterShop20.Website.Database.Nutzer

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{/*
